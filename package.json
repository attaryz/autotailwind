{
  "name": "autotail",
  "version": "0.0.1",
  "description": "cli tool to add tailwindcss to your project",
  "repository": {
    "type": "git",
    "url": "https://github.com/attaryz/autotailwind.git"
  },
  "main": "dist/index.js",
  "bin": "dist/index.js",
