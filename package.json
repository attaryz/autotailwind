    "@types/figlet": "^1.5.6",
    "@types/inquirer": "^9.0.3",
    "@types/progress": "^2.0.5",
    "args": "^5.0.3",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "figlet": "^1.6.0",
    "inquirer": "^9.2.8",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "typescript": "^5.1.6"
